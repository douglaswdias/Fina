@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="5">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudButton Color="Color.Dark" Href="/">Home</MudButton>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/douglaswdias/Fina" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="@_open" Elevation="5">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Fina</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Class="nav-link" Href="categories">
                <MudIcon Icon="@Icons.Material.Filled.Category" Color="Color.Primary" />
                <span>Categorias</span>
            </MudNavLink>
            <MudNavLink Class="nav-link" Href="transactions">
                <MudIcon Icon="@Icons.Material.Filled.Money" Color="Color.Primary" />
                <span>Transações</span>
            </MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        <MudContainer Class="mt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code{
    bool _open = true;

    void ToggleDrawer()
    {
        _open = !_open;
    }
}